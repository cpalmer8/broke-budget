<table class="table">
  <%= will_paginate @expenses %>
    <thead>
      <tr>
        <th>Amount</th>
        <th>Related Budget Expense</th>
        <th>Related Goal</th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr>
          <td><%= expense.amount %> - <%= link_to 'Edit',  edit_expense_path(expense), remote:true %>/<%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %>
          <td><%= expense.master_expense.category %></td>
	  <td><%= expense.goal.name %></td>
        </tr>
      <% end %>
    </tbody>
</table>

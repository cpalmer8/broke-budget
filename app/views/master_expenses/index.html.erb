<div id="master_expenses_table">
    <%= will_paginate @master_expenses %>
    <%= @master_expenses.each do |expense| %>
      <p><%= expense.amount %></p>
      <p><%= link_to 'Show', expense %><p>
      <p><%= link_to 'Edit', edit_master_expense_path(expense), 'data-toggle' => 'modal', 'data-target' => '#myModal' %></p>
      <p><a data-toggle="modal" data-target="#myModal" data-remote="<%= edit_master_expense_path(expense) %> #modal-edit-fields" class="btn btn-mini">Edit (2)</a></p>
      <p><%= link_to 'Destroy', expense, method: :delete, data: { confirm: 'Are you sure?' } %></p>
  <% end %>
</div>
<%= link_to 'New Master Expense', '#new_master_expense_modal', 'data-toggle' => 'modal' %>

<div class="modal fade" id="new_master_expense_modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel">Create new master expense</h4>
      </div>
      <div class="modal-body">
        <%= render 'form', modal: true %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title" id="myModalLabel">Edit expense</h4>
          </div>
          <div class="modal-body">
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </div>
        </div>
      </div>
  </div>


